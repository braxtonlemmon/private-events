<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class='row'>
  <div class='col-md-6' col-md-offset-3'>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.submit "Sign up" %>
		<% end %>
	</div>
</div>