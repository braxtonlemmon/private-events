<div>
	<h1>Welcome, <%= @user.name %>!</h1>
	<p>
		email: <%= @user.email %>
	</p>
</div>
<div>
  <% if @user.events.any? %>
		<h3>Events you are hosting:</h3>
		<ol class="events">
			<% @events.each do |event|%>
				<li>
					<%= link_to event.description.capitalize, '#' %>
				</li>
			<% end %>
		</ol>
	<% end %>
</div>
<div>
  <% if @upcoming_events.any? %>
	  <h3>Events you are attending:</h3>
		<ol class="events">
		  <% @upcoming_events.each do |event| %>
				<li><%= link_to event.description.capitalize, '#' %></li>
			<% end %>
		</ol>
	<% end %>
</div>
<div>
  <% if @prev_events.any? %>
	  <h3>Previous events:</h3>
		<ol class="events">
		  <% @prev_events.each do |event| %>
				<li><%= link_to event.description.capitalize, '#' %></li>
			<% end %>
		</ol>
	<% end %>
</div>
 