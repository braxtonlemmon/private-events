<% provide(:title, current_user.name) %>
<div class="user-info">
	<h1><%= @user.name %></h1>
	<p>
		email: <%= @user.email %>
	</p>
</div>
<div>
  <% if @user.events.any? %>
		<h3>Hosting:</h3>
		<ol class="events">
			<% @events.each do |event|%>
				<li>
					<%= link_to event.description.capitalize, event %>
					(<%= event.date.strftime("%B %e, %Y") %>) 
					<% if current_user == @user %>
						- <%= link_to 'Invite people', new_invitation_path %>
					<% end %>
				</li>
			<% end %>
		</ol>
	<% end %>
</div>
<div>
  <% if @upcoming_events.any? %>
	  <h3>Attending:</h3>
		<ol class="events">
		  <% @upcoming_events.each do |event| %>
				<li>
					<%= link_to event.description.capitalize, event %>
					(<%= event.date.strftime("%B %e, %Y") %>)
				</li>
			<% end %>
		</ol>
	<% end %>
</div>
<div>
  <% if @prev_events.any? %>
	  <h3>Previous:</h3>
		<ol class="events">
		  <% @prev_events.each do |event| %>
				<li>
					<%= link_to event.description.capitalize, event %>
					(<%= event.date.strftime("%B %e, %Y") %>)	
				</li>
			<% end %>
		</ol>
	<% end %>
</div>
 